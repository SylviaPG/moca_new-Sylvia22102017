<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/groundLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/stateLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/xCoord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/simpleGrey"
            android:padding="5dp"
            android:text="@string/dummyText"
            android:textAlignment="center"
            android:textSize="15pt"/>

        <TextView
            android:id="@+id/yCoord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/simpleGrey"
            android:padding="5dp"
            android:text="@string/dummyText"
            android:textAlignment="center"
            android:textSize="15pt"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/simpleGrey"
            android:padding="5dp"
            android:text="@string/dummyText"
            android:textAlignment="center"
            android:textSize="15pt"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/modeLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/viewInAir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/activeGreen"
            android:padding="5dp"
            android:text="InAir"
            android:textAlignment="center"
            android:textSize="15pt"/>

        <TextView
            android:id="@+id/viewHover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/simpleGrey"
            android:padding="5dp"
            android:text="Hover"
            android:textAlignment="center"
            android:textSize="15pt"/>

        <TextView
            android:id="@+id/viewOnScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/simpleGrey"
            android:padding="5dp"
            android:text="OnScreen"
            android:textAlignment="center"
            android:textSize="15pt"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/buttonsLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:text="Reset"
            android:textAlignment="center"
            android:textSize="12pt"/>

        <Button
            android:id="@+id/replayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:text="Replay"
            android:textAlignment="center"
            android:textSize="12pt"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:text="Save"
            android:textAlignment="center"
            android:textSize="12pt"/>

    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/spenViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
    </RelativeLayout>
</LinearLayout>

